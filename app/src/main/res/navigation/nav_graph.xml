<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.newsfeedapp.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_feedDetailFragment"
            app:destination="@id/feedDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>

    <fragment
        android:id="@+id/feedDetailFragment"
        android:name="com.example.newsfeedapp.ui.detail.FeedDetailFragment"
        android:label="FeedDetailFragment" />
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.newsfeedapp.ui.account.AccountFragment"
        android:label="AccountFragment" />
</navigation>